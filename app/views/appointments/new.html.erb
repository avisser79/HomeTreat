 <%= render 'shared/searchbar' %>

<div class="container">
  <div class="sidebar">
    <ul class="list-unstyled">
      <% Category.all.each do |category| %>
        <h5>
          <%= category.name %>
        </h5>
        <ul class="list-unstyled">
          <% category.subcategories.each do |subcategory| %>
            <li>
              <h6>
              <%= subcategory.name %>
              </h6>
            </li>
          <% end %>
        </ul>
      <% end %>
    </ul>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="text-center header-form">
        Book an appointment with
        <%= @specialist.full_name %>
      </h2>
      <%= simple_form_for [:specialist, @appointment] do |f| %>
       <%= f.input :location %>
        <%= f.input :start_time %>

        <%= f.association :treatments, include_hidden: false, collection: Treatment.where(specialist: @specialist), label_method: :description, value_method: :id, as: :check_boxes %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


