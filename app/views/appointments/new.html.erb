  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <label for="first-name">First name</label>
        <input type="text" class="form-control" id="first-name" placeholder="Bob">
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <label for="last-name">Last name</label>
        <input type="text" class="form-control" id="last-name" placeholder="Sponge">
      </div>
    </div>
  </div>
  <!-- Rest of the form -->
  <h1>Make an appointment with: <%= @specialist.full_name %></h1>

<%= simple_form_for [:specialist, @appointment] do |f| %>
    <%= f.input :location %>
    <%= f.input :status %>
    <%= f.input :start_time %>

    <%= f.association :treatments, include_hidden: false, collection: Treatment.where(specialist: @specialist), label_method: :description, value_method: :id, as: :check_boxes %>
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
</form>
