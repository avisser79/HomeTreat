<%= video_tag "body.webm", :loop => true, :autoplay => true, poster: "ht_banner.jpg", class: "video" %>
<%= video_tag "body.mp4", :loop => true, :autoplay => true, poster: "ht_banner.jpg", class: "video" %>

<div class="videobanner gradient" style="background-image: radial-gradient(rgba(201,74,1,0.1), rgba(201,74,1,0.2), rgba(1,104,201,0.5))">
  <div class="content">
    <h1 id="hometreat_header"><span style="color: #FFFFFF">Home</span><span style="color: #0168c9">Treat</span></h1>
    <p id="hometreat_usp"><strong>Get your treatment</strong>. Anytime. Anywhere.</p>
    <form method='GET' action="<%= specialists_path %>">
      <div class="field-wrapper">
        <div class="container">
          <div class="row">
            <%= render 'shared/search_treatment' %>
            <%= render 'shared/search_date' %>
            <%= render 'shared/search_price' %>
            <%= render 'shared/search_location' %>
          </div>
        </div>
      </div>
      <div>
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12">
              <button type="submit" class="btn-search"><i class="fa fa-search btn-search-circle"></i>  Search</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
