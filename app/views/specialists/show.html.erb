<div class="container">
  <div class="text-center">
  <h1>Your selected specialist</h1>
  </div>
  <div class="row confirm-booking-summary">
     <h1> <%= @specialist.full_name %></h1>
        <p> <%= @specialist.user.email %> </p>
        <p><%= @specialist.bio %></p>
        <p><%= @specialist.work_experience %></p>
         <% if @specialist.treatments.blank? %>
            <p>No treatments yet</p>
        <% end %>
    </div>

    <div class="row">
      <div class="columns confirm-booking-left-box">
        <ul class="price">
          <li class="grey">Treatment</li>
          <% @specialist.treatments.each do |treatment| %>
          <li><%= treatment.description %></li>
          <% end %>
        </ul>
      </div>

     <!--  <div class="row">
      <div class="columns confirm-booking-left-box">
        <ul class="price">
          <li class="grey">Category</li>
          <% @specialist.treatments.each do |treatment| %>
          <li><%= treatment.subcategory.name %></li>
          <% end %>
        </ul>
      </div> -->

      <div class="columns text-center">
        <ul class="price">
          <li class="grey">Duration</li>
          <% @specialist.treatments.each do |treatment| %>
          <li><%= treatment.duration %> min</li>
          <% end %>
        </ul>
      </div>

      <div class="columns text-center">
        <ul class="price">
          <li class="grey">Price (excl. VAT)</li>
          <% @specialist.treatments.each do |treatment| %>
          <li>â‚¬ <%= treatment.price %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div>
      <%= link_to 'book an appointment', new_specialist_appointment_path(@specialist), class: 'btn btn-primary' %>

        <!-- edit profile if looking at own page -->
        <% if @specialist.user == current_user %>
        <%= link_to 'update my profile', profile_path, class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
