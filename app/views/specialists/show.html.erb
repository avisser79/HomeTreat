<div class="specialist_card-container">
  <div class="text-center">
  <h1>Your selected specialist</h1>
  </div>
  <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= render 'card', specialist: @specialist %>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= render 'specialist_treatments_card', specialist: @specialist %>
      </div>
      <div class="col-xs-6" id='calendar'></div>
      <div class="col-xs-12">
        <div class="specialist_card_reviews">
            <ul>
              <% 3.times do %>
            <li class="specialist-reviews-subbox">
              <% stars = rand(1..5) %>
              <div class="header">
              <h1>Emma</h1>
                <% stars.times do %>
                <span class="fa fa-star" id="star"></span>
                <% end %>
                <% (5 - stars).times do %>
                <span class="fa fa-star-o" id="star"></span>
                <% end %>
              </div>
              <div>
              <p>This specialist was the best I ever had!</p>
              </div>
            </li>
            <% end %>
            </ul>
      </div>
    </div>
  </div>
</div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $('#calendar').fullCalendar({
    defaultView: 'agendaWeek',
    events: '/specialists/<%= @specialist.id %>.json' });
  <% end %>
<% end %>


